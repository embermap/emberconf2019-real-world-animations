{{animated-orphans}}

<div class="h-screen flex flex-col">
  <div class="h-full flex">
    <div class="w-64 border-r flex flex-col">
      <ol class='sticky pin-t list-reset'>
        {{#each (array
          (hash model='1-css-only' label='CSS Only')
          (hash model='2-modifier-reuse' label='Modifier reuse')
          (hash model='3-conditional' label='Conditional')
          (hash model='4-conditional-2' label='Conditional')
          (hash model='5-resortable-list' label='Resortable list')
          (hash model='6-beacon-shopping-cart' label='Beacon shopping cart')
        ) as |route index|}}
          <li class='relative'>
            {{#link-to 'show' route.model class='no-underline p-4 pl-5 text-grey-darkest inline-block w-full relative z-10'}}
              {{add index 1}}. {{route.label}}
            {{/link-to}}

            {{#animated-if (is-active 'show' route.model) use=activeNavTransition group='nav' duration=250}}
              <div class='absolute w-full pin-t pin-b flex'>
                <div class="w-2 bg-blue"></div>
                <div class="w-full bg-grey-lighter"></div>
              </div>
            {{/animated-if}}
          </li>
        {{/each}}
      </ol>

      <button class='mt-auto p-4 focus:outline-none' {{action 'toggleControls'}}>
        Controls
      </button>
    </div>

    <main class='w-full overflow-scroll'>
      {{outlet}}
    </main>
  </div>

  <AnimatedContainer>
    {{#animated-if isShowingTools use=transition duration=250}}
      <div class="z-50 bg-grey-darkest text-white w-full shadow-inner">
        <div class="flex">
          <div class="w-256 mx-auto">
            <TimeControl />
          </div>
        </div>
      </div>
    {{/animated-if}}
  </AnimatedContainer>
</div>
